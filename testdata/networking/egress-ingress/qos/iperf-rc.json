{
    "apiVersion": "v1",
    "kind": "ReplicationController",
    "metadata": {
        "labels": {
            "name": "iperf-rc"
        },
        "name": "iperf-rc"
    },
    "spec": {
        "replicas": 1,
        "template": {
            "metadata": {
                "labels": {
                    "name": "iperf-pods"
                },
		"annotations": {
		    "kubernetes.io/ingress-bandwidth": "5M",
		    "kubernetes.io/egress-bandwidth": "10M"
		}
            },
            "spec": {
                "containers": [
                    {
                        "image": "quay.io/openshifttest/hello-sdn@sha256:afdac7d35d6fc61d0f61c991b7657bb638892add8ed8acc6541cc7b605dcfd80",
                        "name": "iperf",
                        "imagePullPolicy": "IfNotPresent",
                        "resources":{
                          "limits":{
                            "memory":"340Mi"
                          }
                        }
                    }
                ]
            }
        }
    }
}

